<script>
  var connNode = document.querySelector("#connection");
  connNode.onclick = function () {
    var dbPath = localStorage["input#db-path"];
    if(!dbPath) return Nav.dbPath();

    Nav.dbs();
  };

  var listNode = document.querySelector("#list");
  listNode.onclick = function() {

    var dbPath = localStorage["input#db-path"];
    if(!dbPath) return Nav.dbPath();

    Nav.collections();              
  };

  var tableNode = document.querySelector("#table-link");
  tableNode.onclick = function () {
    var newUrl = Nav.changeView("table");

    if(newUrl != window.location.href) {
      window.location.href = Nav.changeView("table");
    } else Nav.collections();
    
  };

  var pivotNode = document.querySelector("#pivot-link");
  pivotNode.onclick = function () {
    var newUrl = Nav.changeView("pivot");

    if(newUrl != window.location.href) {
      window.location.href = Nav.changeView("pivot");
    } else Nav.collections();
  };
</script>